.hero-photo {
  width: 12rem;
  height: 12rem;
  object-fit: cover;
  border-radius: 50%;
  border: 4px solid #FFD700;
  box-shadow: 0 4px 24px 0 rgba(255, 179, 0, 0.25);
  background: #fff;
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: 0.7rem;
}

.hero-name {
    font-size: 5rem;
    margin: 0;
    line-height: 1.1;
    width:5px;
    display:table;
    white-space: pre-wrap;
}

.hero-role {
    font-size: 1.3rem;
    color: #fff;
    margin-top: 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem 0.5rem;
    max-width: 30rem;
    align-items: center;
    justify-items: center
}

.role-label {
  font-weight: 600;
  color: #FFD700;
  font-size: 1.2rem;
}

.role-value {
  font-weight: 400;
  color: #fff;
  font-size: 1.1rem;
}

.hero-role-desired .role-label {
  color: #ffb300;
}

.hero-role-desired .role-value {
  color: #ffb300;
  font-weight: 600;
}

@media (max-width: 600px) {
  .hero-box {
    flex-direction: column;
    padding: 1.5rem 1rem 1rem 1rem;
    max-width: 98vw;
  }
  .hero-content {
    flex-direction: column;
    gap: 1.2rem;
  }
  .hero-photo {
    width: 90px;
    height: 90px;
  }
  .hero-name {
    font-size: 2.5rem;
    margin-top: -2rem;
