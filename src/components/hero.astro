---
import GoArrow from "./goArrow.astro";

const photoUrl = "https://media.licdn.com/dms/image/v2/C5603AQFgLsDa8IITaw/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1535990684301?e=1755734400&v=beta&t=A3wiwoH5JIFYZrxRX-mcpsrTXUkumNzavDrglcTsNPI";
const name = "FRANCESCO\nBADIALI";
const currentRole = "Senior Frontend Web Developer";
const desiredRole = "Senior Frontend Web Developer - Frontend Tech Leader";
---
<div class="hero-container">
    <h1 class="hero-name sun-title">{name}</h1>
    <div class="hero-box box">
      <div class="hero-content">
        <img src={photoUrl} alt={name} class="hero-photo" />
        <div class="hero-text">
          <div class="hero-role">
            <span class="role-label">Current role:</span>
            <span class="role-value">{currentRole}</span>
            <span class="role-label">Desired role:</span>
            <span class="role-value">{desiredRole}</span>
          </div>
        </div>
      </div>
    </div>
    <GoArrow href="#tools"></GoArrow>
</div>

